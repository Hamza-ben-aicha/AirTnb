{% extends 'base.html.twig' %}

{% block title %}Listing{% endblock %}

{% block body %}
    <h1>Listing</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ listing.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ listing.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ listing.price }}</td>
            </tr>
            <tr>
                <th>Beds</th>
                <td>{{ listing.beds }}</td>
            </tr>
            <tr>
                <th>Guests</th>
                <td>{{ listing.guests }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ listing.location }}</td>
            </tr>
            <tr>
                <th>AvailableFrom</th>
                <td>{{ listing.availableFrom ? listing.availableFrom|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>AvailableUntil</th>
                <td>{{ listing.availableUntil ? listing.availableUntil|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Amenities</th>
                <td>{{ listing.amenities ? listing.amenities|join(', ') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('listing_index') }}">back to list</a>

    <a href="{{ path('listing_edit', {'id': listing.id}) }}">edit</a>

    {{ include('listing/_delete_form.html.twig') }}
{% endblock %}
